{
    "branches": [
        "main",
        {
            "name": "dev",
            "prerelease": "beta"
        }
    ],
    "repositoryUrl": "https://github.com/n24q02m/wet-mcp.git",
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        "@semantic-release/changelog",
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "uvx --from=toml-cli toml set --toml-path pyproject.toml project.version ${nextRelease.version}"
            }
        ],
        [
            "@semantic-release/github",
            {
                "failTitle": false,
                "failComment": false
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "pyproject.toml",
                    "CHANGELOG.md"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ]
    ]
}
